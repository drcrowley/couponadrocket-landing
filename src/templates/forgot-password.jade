extends _layouts/layout
include ../blocks/header/header
include ../blocks/footer/footer
include ../blocks/checkbox/checkbox

block vars
  - var title = 'Забыл пароль'; 

block header
  +header()

block main
  .page__holder
    .enter
      h1.enter__title Забыл пароль
      h2.enter__sub-title Введите свой email, на него будет будет выслан пароль
      form.form.enter__form.js-reset-form
        .form__item
          input(type="email", placeholder="Ваш адрес e-mail", name="email", required, maxlength="129").form__input
        button(type="submit").button.button_form.button_block.form__button.enter__button Отправить
        .form__error
block footer
  +footer()
